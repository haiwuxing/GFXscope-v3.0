<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>

    <!-- Тёмная тема для фрагмента настроек FragmentSettings
    	 Цвет textColorPrimary - title CheckBoxPreference
    	 Цвет textColorSecondary - summary CheckBoxPreference
    -->
    <style name="AppCompatLight" parent="@style/Theme.AppCompat.Light"><!-- android:Theme.Holo --><!-- @style/Theme.AppCompat.Light -->
	    <item name="android:textColorPrimary">#FFFFFF</item>
		<item name="android:textColorSecondary">#A0FFFFFF</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Тема для андроида 2.xx, чтобы его меню (по аппаратной кнопке меню) выглядело нормально читаемым -->
    <style name="Translucent" parent="android:Theme.Translucent"></style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">        
	       <item name="android:background">@drawable/button</item>
	       <!-- Стиль текста на кнопке -->
	       <item name="android:textColor">@color/White</item>
	       <item name="android:textStyle">bold</item>
		   <item name="android:layout_width">fill_parent</item>
		   <item name="android:layout_height">wrap_content</item>
		   <item name="android:gravity">center</item>
		   <item name="android:layout_margin">10dp</item>
		   <item name="android:textSize">35sp</item>
		   <item name="android:shadowColor">#000000</item>
		   <item name="android:shadowDx">1.3</item>
		   <item name="android:shadowDy">-0.5</item>
		   <item name="android:shadowRadius">1</item>
    </style>

        <style name="TextViewTheme" parent="@android:style/Widget.TextView">
	       <!-- Стиль текста  -->
	       <item name="android:textColor">@color/Gold</item>
	       <item name="android:textStyle">bold</item>
		   <item name="android:layout_width">fill_parent</item>
		   <item name="android:layout_height">wrap_content</item>
		   <item name="android:gravity">center</item>
		   <item name="android:layout_margin">10dp</item>
		   <item name="android:textSize">25sp</item>
		   <item name="android:shadowColor">#000000</item>
		   <item name="android:shadowDx">2</item>
		   <item name="android:shadowDy">-0.2</item>
		   <item name="android:shadowRadius">1</item>
    </style>

    <!-- СТИЛЬ ПОЯВЛЕНИЯ И ИСЧЕЗАНИЯ ПОПАП-ОКОШКА -->
    <style name="PopupWindowAnimation" parent="android:Animation" >     
        <item name="android:windowEnterAnimation">@anim/popup_show</item> 
        <item name="android:windowExitAnimation">@anim/popup_hide</item> 
    </style> 



</resources>