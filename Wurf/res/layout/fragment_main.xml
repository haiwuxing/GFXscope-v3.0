<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_fragment_mane"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fon_graf"
    android:keepScreenOn="true"
    android:orientation="horizontal" >

    <com.jjoe64.graphview.GraphView
        android:id="@+id/OscillPlot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="100dp"
        title="Осциллограмма" />
    <!-- android:background="@drawable/oval_button" -->

    <SeekBar
        android:id="@+id/seekBar_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/OscillPlot"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="-70dp"
        android:gravity="bottom"
        android:max="255" />

    <android.widget.VerticalSeekBar
        android:id="@+id/seekBar_usync"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="-117dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/OscillPlot"
        android:max="255" />

    <Button
        android:id="@+id/screen_bt_pause"
        style="@style/ButtonTheme"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/pause"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_plus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/bt_right"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_minus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/bt_left"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_CH1plus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/ch1plus"
        android:textColor="@color/ch1_color"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_CH1minus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/ch1minus"
        android:textColor="@color/ch1_color"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_CH2plus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/ch2plus"
        android:textColor="@color/ch2_color"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_CH2minus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/ch2minus"
        android:textColor="@color/ch2_color"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_Tplus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/t_plus"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/screen_bt_Tminus"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/t_minus"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/screen_bt_Tfree"
        style="@style/ButtonTheme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/screen_bt_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/t_free"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/ExitBtn"
        android:layout_width="85dp"
        android:layout_height="@dimen/button2_height"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/seekBar_usync"
        android:text="@string/exit"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <Button
        android:id="@+id/MenuBtn"
        android:layout_width="85dp"
        android:layout_height="@dimen/button2_height"
        android:layout_below="@+id/ExitBtn"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/seekBar_usync"
        android:text="@string/menu"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="85dp"
        android:layout_height="@dimen/button2_height"
        android:layout_below="@+id/OpenBtn"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/seekBar_usync"
        android:text="@string/save"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <Button
        android:id="@+id/OpenBtn"
        android:layout_width="85dp"
        android:layout_height="@dimen/button2_height"
        android:layout_below="@+id/MenuBtn"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/seekBar_usync"
        android:text="@string/open"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH1avr"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_below="@+id/SaveBtn"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/seekBar_usync"
        android:gravity="left"
        android:text="@string/CH1avr"
        android:textColor="@color/ch1_color"
        android:textSize="12sp"
        android:color="@color/White" />

    <TextView
        android:id="@+id/textView_CH1rms"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH1avr"
        android:layout_below="@+id/textView_CH1avr"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="left|top"
        android:text="@string/CH1rms"
        android:textColor="@color/ch1_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH1pp"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH1rms"
        android:layout_below="@+id/textView_CH1rms"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="left|top"
        android:text="@string/CH1pp"
        android:textColor="@color/ch1_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH1freq"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH1pp"
        android:layout_below="@+id/textView_CH1pp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="left|top"
        android:text="@string/CH1freq"
        android:textColor="@color/ch1_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH1dutyc"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH1freq"
        android:layout_below="@+id/textView_CH1freq"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="left|top"
        android:text="@string/CH1dc"
        android:textColor="@color/ch1_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH2avr"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH1dutyc"
        android:layout_below="@+id/textView_CH1dutyc"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="@string/CH2avr"
        android:textColor="@color/ch2_color"
        android:textSize="12sp"
        android:color="@color/White" />

    <TextView
        android:id="@+id/textView_CH2rms"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH2avr"
        android:layout_below="@+id/textView_CH2avr"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="bottom"
        android:text="@string/CH2rms"
        android:textColor="@color/ch2_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH2pp"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH2avr"
        android:layout_below="@+id/textView_CH2rms"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="bottom"
        android:text="@string/CH2pp"
        android:textColor="@color/ch2_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH2freq"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH2pp"
        android:layout_below="@+id/textView_CH2pp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:text="@string/CH2freq"
        android:textColor="@color/ch2_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_CH2dutyc"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView_CH2freq"
        android:layout_below="@+id/textView_CH2freq"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:text="@string/CH2dc"
        android:textColor="@color/ch2_color"
        android:textSize="12sp" />

    <Button
        android:id="@+id/T_auto"
        android:layout_width="@dimen/button2_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/seekBar_scroll"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-5dp"
        android:text="@string/T_auto"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <Button
        android:id="@+id/CH1_auto"
        android:layout_width="@dimen/button2_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignTop="@+id/T_auto"
        android:layout_toRightOf="@+id/T_auto"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"      
        android:text="@string/CH1_auto"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <Button
        android:id="@+id/CH2_auto"
        android:layout_width="@dimen/button2_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignTop="@+id/CH1_auto"
        android:layout_toRightOf="@+id/CH1_auto"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/CH2_auto"
        android:textColor="@color/White"
        android:textSize="12sp" />
    
    <Button
        android:id="@+id/Sync_auto"
        android:layout_width="@dimen/button2_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignTop="@+id/CH2_auto"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/CH2_auto"
        android:text="@string/sync_ch"
        android:textColor="@color/White"
        android:textSize="12sp" />
    
     <Button
        android:id="@+id/Sync_type"
        android:layout_width="@dimen/button2_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignTop="@+id/Sync_auto"
        android:layout_toRightOf="@+id/Sync_auto"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/sync_type"
        android:textColor="@color/White"
        android:textSize="12sp" />
        
     <Button
        android:id="@+id/CH1_ACDC"
        android:layout_width="@dimen/buttonACDC_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignTop="@+id/Sync_type"
        android:layout_toRightOf="@+id/Sync_type"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/CH1ACDC"
        android:textColor="@color/Green"
        android:textSize="12sp" />

    <Button
        android:id="@+id/CH2_ACDC"
        android:layout_width="@dimen/buttonACDC_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/CH1_ACDC"
        android:layout_toRightOf="@+id/CH1_ACDC"
        android:text="@string/CH2ACDC"
        android:textColor="@color/Cyan"
        android:textSize="12sp" />
     
     <Button
        android:id="@+id/SendBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignTop="@+id/CH2_ACDC"
        android:layout_toRightOf="@+id/CH2_ACDC"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/start"
        android:textColor="@color/White"
        android:textSize="12sp" />
        
    <TextView
        android:id="@+id/Text_bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SendBtn"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/SendBtn"
        android:inputType="none"
        android:text="@string/bitrate"
        android:textColor="@color/White"
        android:textSize="16sp" />
 
</RelativeLayout>